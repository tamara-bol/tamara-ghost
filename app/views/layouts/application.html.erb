<!DOCTYPE html>
<html>
  <head>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <title>Ghost</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> --!>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="bootstrap.js" type="text/html"></script>

     <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
      <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="css/sb-admin.css" rel="stylesheet">
    <link href="css/ghost-user.css" rel="stylesheet">
    <link href="css/hover_avatar.css" rel="stylesheet">
  </head>

  <body id="page-top">
    <div id="wrapper">
    <div style="width:150px; margin-left: 15px; border: 'solid black'; border-width: 1px">
    <!-- Sidebar -->
    <ul id = "gh-sidebar" class="sidebar navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="index.html">
          <i class="fas fa-fw fa-tachometer-alt"></i>
        </a>
      </li>
      <% if !current_user.nil? %>
        <div class="btn-group">
          <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.full_name %>
          </button>
          <div class="dropdown-menu">
            
            <a class="dropdown-item" href="#"><%= link_to 'Your Profile',  user_path(current_user), 
                    method: :get %></a>
            <a class="dropdown-item" href="#"><%= link_to 'Sign out',  destroy_user_session_path, 
                    method: :delete %></a>
          </div>
          <br>
      <% end %>

      <% if !current_user.nil? %> 
        <% if current_user.is_admin || current_user.is_editor %>
          <%= current_user.team %> -
        <% end %>
        <%= current_user.stories %>
      <%end%>

    </ul>
  </div>
    <div id="content-wrapper">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>


